                    </div>
                </div>

                <div class="form-control">
                    @Html.LabelFor(model => model.Notice, htmlAttributes: new { @class = "text-danger" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Notice ,new { htmlAttributes = new { @class = "enquiry" } })
                        @Html.ValidationMessageFor(model => model.Notice, "", new { @class = "text-dangerr" })
                        <div class="clear"></div>
                    </div>
                </div>
                <br />
                <br />
                <br />
                <br />
               
