<body>


    @{
        ViewBag.Title = "Edit";
        Layout = null;
    }




    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()

        <div class="content-w3ls">
            <h1 class="agile-head text-center">Edit Your Notice </h1>
            <br />
            <br />
