                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.id)

                <div class="form-control">
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "text-danger" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "header" } })
