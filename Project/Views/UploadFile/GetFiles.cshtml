@model IEnumerable<Project.Models.upload_file>

@{
    ViewBag.Title = "GetFiles";
}
<span><br /></span>

<h3>Download File</h3>

<table class="table table-hover">
    <tr>
        <th>
           File Name
        </th>
        <th>
            Subject
        </th>
        <th>
            Grade
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {

            <p class="bg-danger text-center text-white font-weight-bold">
                No files Uploded
            </p>

    }
    else
    {

        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.file_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subject)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.grade)
                </td>
                <td>
                    @Html.ActionLink("Download", "DownloadFile", new { fileName = item.file_name })
                </td>
            </tr>
        }
    }

</table>

