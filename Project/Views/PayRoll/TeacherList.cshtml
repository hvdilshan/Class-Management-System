@model IEnumerable<Project.Models.Teacher>
@{
    ViewBag.Title = "TeacherList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

</head>
<body style="padding: 10px">
    <p class="display-1">Teacher Details</p>
    <button style="font-size:20px;color:black">
        @Html.ActionLink("Show Salary Details", "Salary_details_teacher")
    </button>
    <br />
    <br />

    <div style="font-size:15px">
        @using (Html.BeginForm("TeacherList", "PayRoll", FormMethod.Get))
        {
            @Html.TextBox("searching")<input type="submit" value="Search" />
        }
    </div>
    <br />
    <table class="table table-hover" style="font-size:15px;">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserID)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Add", "Add_teacher_salary", new { id = item.UserID })
                </td>


            </tr>
        }

    </table>


</body>

