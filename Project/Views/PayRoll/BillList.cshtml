@model IEnumerable<Project.Models.Biil>

@{
    ViewBag.Title = "BillList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

</head>
<body style="padding: 10px">
    <p class="display-1">Bill Details</p>
    <button style="font-size:20px;color:black">
        @Html.ActionLink("Add New", "CreateAccount_bill")
    </button>
    <br />
    <br />

    <div style="font-size:15px">
        @using (Html.BeginForm("BillList", "PayRoll", FormMethod.Get))
        {
            @Html.TextBox("searching")<input type="submit" value="Search" />
        }
    </div>
    <br />
    <table class="table table-hover" style="font-size:15px;">
        <tr>
            <th>
                Bill Id
            </th>
            <th>
                Payment Name
            </th>
            <th>
                Amount
            </th>
            <th>
                Date And Time
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BillId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditDetails_bill", new { id = item.BillId }) |
                    @Html.ActionLink("Details", "Details_bill", new { id = item.BillId }) |
                    @Html.ActionLink("Delete", "DeleteDetails_bill", new { id = item.BillId })
                </td>
            </tr>
        }

    </table>
</body>
