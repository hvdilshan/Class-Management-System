@model IEnumerable<Project.Models.StudentTB>

@{
    ViewBag.Title = "StudentList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br /><br />
<br />
<head>
    <meta charset="utf-8" />
    <title></title>
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">

</head>
<body style="padding: 10px">
    <p class="display-1">Student Details</p>
    <button style="font-size:20px;color:black">@Html.ActionLink("Show Fee Details", "Fee_details_students")</button>
    <br />
    <br />

    <div style="font-size:15px">
        @using (Html.BeginForm("StudentList", "PayRoll", FormMethod.Get))
        {
            @Html.TextBox("searching")<input type="submit" value="Search" />
        }
    </div>

    <br />

    <table class="table table-hover" style="font-size:15px;">
        <tr>
            <th>
                <h4>Student ID</h4>
            </th>
            <th>
                <h4>Student Name</h4>
            </th>

            <th>
                <h4>Subject</h4>
            </th>
            <th>
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fullname)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.subject)
                </td>

                <td>
                    @Html.ActionLink("Add New", "Add_student_fee", new { id = item.sid })

                </td>
            </tr>
        }

    </table>
</body>

