            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style = "font-size:15px" } })

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-md-2" })
