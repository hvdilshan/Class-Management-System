@model Project.Models.UserFeedback
@{
    ViewBag.Title = "Feedback Page";
 //Layout = null;
}
    <!-- //custom-theme -->
    @Styles.Render("~/Content/style.css")

    @using (Html.BeginForm())
            {
        @Html.AntiForgeryToken()

        <div class="content-w3ls">
            <h1 class="agile-head text-center">Feedback</h1>
            <div class="form-w3layouts">


                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "text-dark col-sm-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "header form-control" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-dangerr" })
                        <div class="clear"></div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Teacher, htmlAttributes: new { @class = "text-dark col-sm-2 control-label" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.Teacher, ViewBag.list as SelectList, "Select your teacher", new { htmlAttributes = new { @class = "header" } })
                        @*@Html.EditorFor(model => model.Teacher, new { htmlAttributes = new { @class = "header" } })*@
                        @Html.ValidationMessageFor(model => model.Teacher, "", new { @class = "text-dangerr" })
                    </div>
                    <div class="clear"></div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "text-dark col-sm-2 control-label" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "header" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-dangerr" })
                    </div>
                    <div class="clear"></div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(model => model.Comment, htmlAttributes: new { @class = "text-dark control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.Comment, new { htmlAttributes = new { @class = "enquiry" } })
                        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                    </div>
                    <div class="clear"></div>
                </div>



                <div class="form-group w3ls-end">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="register" value="Submit" />
                        <input type="reset" class="reset" value="Reset">
                    </div>
                    <div>
                        <button class="btn back">  @Html.ActionLink("Back to List", "Index", "",new { @class = "text-dark" })</button>
                    </div>

                </div>

            </div>

        </div>

    }

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
