@model Project.Models.ExamUpload

@{
               

                ViewBag.Title = "Index";
}



@Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Insert</h4>
        <hr />
        @using (Html.BeginForm("Index", "Exam", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })




            <div class="form-group">
                @Html.LabelFor(model => model.subject1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.subject_id, ViewBag.subList as SelectList, "Select Your Subject", htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.subject1, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.grade1, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.grade_id, ViewBag.grList as SelectList, "Select Your Grade", htmlAttributes: new { @class = "form-control" })

                    @Html.ValidationMessageFor(model => model.grade1, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="row">
                <div class="col-md-offset-2 col-md-8">

                    <input type="file" name="file" />
                    <br />


                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-default" />
                        </div>
                    </div>






                </div>
            </div>

        }
        <script src="~/Scripts/jquery-3.3.1.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('#StartTime').datepicker({
                    dateFormat: "dd/mm/yy",
                    showStatus: true,
                    showWeeks: true,
                    currentText: 'Now',
                    autoSize: true,
                    gotoCurrent: true,
                    showAnim: 'blind',
                    highlightWeek: true
                });

            });
        </script>

    </div>
